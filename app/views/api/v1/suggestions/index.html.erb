<% @suggestions.each do |suggestion| %>
  <% if suggestion.optional == false %>
    <p>Always Purchased: <%= suggestion.name %></p>
  <% elsif suggestion.optional == true %>
    <p>Suggested Snack: <%= suggestion.name %></p>
  <% end %>
<% end %>

<a href="#" class="button" id="new-suggestion-button" onclick="newSuggestionToggle(event)">New Suggestion</a>

<div id="new-suggestion-info">
  <h1>New Snack</h1>
  <p>Snacks already purchased or suggested will not be saved</p>
  <%= form_for @suggestion, url: { action: "create" }, remote: true do |f| %>
    <br>
    <div>
      <p id="snack-submission-success"></p>
    </div>
    <div>
      <%= f.label :name %>&nbsp;<span id="name-error">&nbsp;*</span>
      <%= f.text_field :name, id: "name-field" %>
    </div>
    <div>
      <%= f.label :purchase_location %>&nbsp;<span id="purchase-location-error">&nbsp;*</span>
      <%= f.text_field :purchase_location, id: "purchase-location-field" %>
    </div>
    <div>
      <%= f.hidden_field :optional, value: true %>
      <%= f.submit 'Submit' %>
    </div>
  <% end %>
</div>
